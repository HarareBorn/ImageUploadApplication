@{
    ViewData["Title"] = "Image Upload App";
}

<h2>Image Upload App</h2>
<form id="uploadForm">
    <input type="file" name="file" id="fileUpload" accept=".png,.jpeg" />
    <br />
    <button type="button" id="upload-file" class="submitBtn" style="margin: auto">Upload</button>
</form>

<table style="margin-top: 40px; border-spacing: 10px; width: 80%" class="table-bordered" id="tbl-body">
    <thead>
        <tr>
            <td>File Name</td>
            <td>Image Preview</td>
            <td>Action</td>
        </tr>
    </thead>
</table>

<!-- Modal -->
<div id="myModal" class="modalClass">
    <div style="text-align: center; width: 90%">
        <img id="createImage" />
    </div>
    <div style="margin: 10px 0 0 -100px; text-align: center">
        <button id="close-modal" class="submitBtn" style="margin: auto">Close</button>
    </div>
</div>